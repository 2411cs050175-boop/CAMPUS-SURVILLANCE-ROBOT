<body>
  <h1>ü§ñ CAMPUS SURVEILLANCE ROBOT ü§ñ</h1>

  <div class="controller">
    <div class="row">
      <button onclick="sendCommand('start')">üöÄ START</button>
      <button onclick="sendCommand('stop')">‚èπ STOP</button>
    </div>

    <div class="speed-control">
      <label>Speed: <span id="speedValue">50</span>%</label><br>
      <input type="range" min="0" max="100" value="50" id="speedSlider" oninput="updateSpeed(this.value)">
    </div>

    <div class="log-box" id="logBox"></div>
  </div>

  <footer>Developed with ‚ù§Ô∏è using Django & Raspberry Pi</footer>

  <script>
  let speed = 50;

  function updateSpeed(value) {
    speed = value;
    document.getElementById('speedValue').innerText = value;
  }

  function logMessage(msg) {
    const box = document.getElementById("logBox");
    const time = new Date().toLocaleTimeString();
    box.innerHTML += `<div>[${time}] ${msg}</div>`;
    box.scrollTop = box.scrollHeight;
  }

  function sendCommand(cmd) {
    // ‚úÖ Your Raspberry Pi IP (Backend)
    const serverIP = "192.168.137.243"; 
    const url = `http://${serverIP}:8000/move/?cmd=${cmd}&speed=${speed}`;

    fetch(url)
      .then(response => response.json())
      .then(data => {
        logMessage(data.action || "‚úÖ Command sent successfully");
      })
      .catch(() => {
        logMessage("‚ö†Ô∏è Failed to connect to Raspberry Pi!");
      });
  }
  </script>
